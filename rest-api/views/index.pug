doctype html
html(lang='de')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='main.css', type='text/css')
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Projects
  body
    .wrapper
      .portfolio-single.container-fluid
        // .row
        .row
          .col-md-8.col-sm-8.portfolio-field.portfolio-title
            h2 #{title}
          .col-md-4.col-sm-4.portfolio-field.portfolio-nav
            a.button.back(href='/programs/projects/')
        .row
          // PORTFOLIO-IMAGES - column 8/12
          .col-md-8.portfolio-field
            .left
             -if(video)
              video(controls='', src=''+video, poster='', style='width: 100%; height: 100%;')
             -if(img)
              img(src=''+img)
            .video-descript
              a.button.primary(href=''+github) View on Github
            -if(url)
              a.button.primary(href=''+url) LAUNCH PROJECT

          .col-md-4.portfolio-field
            h3 Description
            p
              | #{description}
            -if(challenge)
             h3 Challenges
             p #{challenge}
            h3 Notable Features
            ul.features
              each element in features
                li
                  a=element
            h3 Technology
            ul.tags
             each element in technology
              li
                a=element 
      // .portfolio-single
      // InstanceEndEditable
      // WRAPPER
      script.
        function goBack(){
        window.history.back();
        }
